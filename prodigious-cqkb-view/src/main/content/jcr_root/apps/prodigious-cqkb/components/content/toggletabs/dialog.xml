<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Toggle Tabs"
    xtype="dialog">
    <listeners
        jcr:primaryType="nt:unstructured"
        beforeshow="function(dialog){Prodigious.CQWidgets.x2.manageTabs(dialog.items.get(0));}"/>
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <selection
                jcr:primaryType="cq:Panel"
                title="Switch Tabs">
                <items jcr:primaryType="cq:WidgetCollection">
                    <selection
                        jcr:primaryType="cq:Widget"
                        defaultValue="v1"
                        fieldLabel="Selection"
                        fieldSubLabel="Lorem ipsum"
                        name="./selection"
                        type="radio"
                        xtype="selection">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            loadcontent="function(field,rec,path){Prodigious.CQWidgets.x2.showTab(field);}"
                            selectionchanged="function(field,value){Prodigious.CQWidgets.x2.showTab(field);}"/>
                        <options jcr:primaryType="cq:WidgetCollection">
                            <v1
                                jcr:primaryType="nt:unstructured"
                                text="Show Tab 1"
                                value="tab1"/>
                            <v2
                                jcr:primaryType="nt:unstructured"
                                text="Show Tab 2"
                                value="tab2"/>
                            <v3
                                jcr:primaryType="nt:unstructured"
                                text="Show Tab 3"
                                value="tab3"/>
                        </options>
                    </selection>
                    <multiple
                        jcr:primaryType="cq:Widget"
                        defaultValue="v2"
                        fieldLabel="Multiple"
                        fieldSubLabel="Lorem ipsum"
                        name="./multipleselection"
                        type="checkbox"
                        xtype="selection">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            loadcontent="function(field,rec,path){Prodigious.CQWidgets.x2.showMultipleTabs(field);}"
                            selectionchanged="function(field,value){Prodigious.CQWidgets.x2.showMultipleTabs(field);}"/>
                        <options jcr:primaryType="cq:WidgetCollection">
                            <v1
                                jcr:primaryType="nt:unstructured"
                                text="Show Tab 1"
                                value="tab1"/>
                            <v2
                                jcr:primaryType="nt:unstructured"
                                text="Show Tab 2"
                                value="tab2"/>
                            <v3
                                jcr:primaryType="nt:unstructured"
                                text="Show Tab 3"
                                value="tab3"/>
                        </options>
                    </multiple>
                </items>
            </selection>
            <first
                jcr:primaryType="cq:Panel"
                title="Tab 1">
                <listeners
                    jcr:primaryType="nt:unstructured"
                    render="function(tab){Prodigious.CQWidgets.x2.hideTab(tab);}"/>
                <items jcr:primaryType="cq:WidgetCollection">
                    <text3
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Text 1"
                        name="./text1"
                        xtype="textfield"/>
                    <text4
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Text 2"
                        name="./text2"
                        xtype="textfield"/>
                </items>
            </first>
            <second
                jcr:primaryType="cq:Panel"
                title="Tab 2">
                <listeners
                    jcr:primaryType="nt:unstructured"
                    render="function(tab){Prodigious.CQWidgets.x2.hideTab(tab);}"/>
                <items jcr:primaryType="cq:WidgetCollection">
                    <text3
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Text 3"
                        name="./text3"
                        xtype="textfield"/>
                    <text4
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Text 4"
                        name="./text4"
                        xtype="textfield"/>
                </items>
            </second>
            <third
                jcr:primaryType="cq:Panel"
                title="Tab 3">
                <listeners
                    jcr:primaryType="nt:unstructured"
                    render="function(tab){Prodigious.CQWidgets.x2.hideTab(tab);}"/>
                <items jcr:primaryType="cq:WidgetCollection">
                    <text5
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Text 5"
                        name="./text5"
                        xtype="textfield"/>
                    <text6
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Text 6"
                        name="./text6"
                        xtype="textfield"/>
                </items>
            </third>
        </items>
    </items>
</jcr:root>
